{
  "swagger": "2.0",
  "info": {
    "title": "JSBossa",
    "description": "JSBossa Project",
    "version": "1.0.0",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "La√©rcioSB",
      "email": "laerciosouza@lavid.ufpb.br",
      "url": "http://lavid.ufpb.br"
    },
    "license": {
      "name": "MIT",
      "url": "http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/roles": {
      "get": {
        "tags": [
          "Role"
        ],
        "summary": "Retrieve all roles",
        "description": "This resource returns information about the `JSBossa roles`. The response includes the display\nname each role, and lists the roles in the proper display order.\n",
        "responses": {
          "200": {
            "description": "An array of roles",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Role"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Role"
        ],
        "summary": "Add an new role",
        "description": "This resource add a new `role`.",
        "parameters": [
          {
            "in": "body",
            "name": "Role",
            "description": "Role Object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RoleBodyPost"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "An `role` object",
            "schema": {
              "$ref": "#/definitions/Role"
            }
          }
        }
      }
    },
    "/roles/{roleId}": {
      "get": {
        "tags": [
          "Role"
        ],
        "summary": "Retrieve an role",
        "description": "This resource retrieve a existing `role`.",
        "parameters": [
          {
            "in": "path",
            "name": "roleId",
            "description": "Role ID that needs to be fetched",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "An `role` object",
            "schema": {
              "$ref": "#/definitions/Role"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Role"
        ],
        "summary": "Update an role",
        "description": "This resource update a existing `role`.",
        "parameters": [
          {
            "in": "path",
            "name": "roleId",
            "description": "Role ID that needs to be fetched",
            "required": true,
            "type": "string"
          }, {
            "in": "body",
            "name": "Role",
            "description": "Role Object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/RoleBodyPut"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "An `role` object",
            "schema": {
              "$ref": "#/definitions/Role"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Role"
        ],
        "summary": "Remove an role",
        "description": "This resource remove a existing `role`.",
        "parameters": [
          {
            "in": "path",
            "name": "roleId",
            "description": "Role ID that needs to be fetched",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "An `role` object",
            "schema": {
              "$ref": "#/definitions/Role"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "RoleBodyPost": {
      "properties": {
        "name": {
          "type": "string",
          "example": "expert",
          "description": "Role Title"
        }
      },
      "required": [
        "name"
      ]
    },
    "RoleBodyPut": {
      "properties": {
        "name": {
          "type": "string",
          "example": "moderator",
          "description": "Role Title"
        }
      },
      "required": [
        "name"
      ]
    },
    "Role": {
      "properties": {
        "_id": {
          "type": "string",
          "example": "58023182ef8a77200be9c7d6",
          "description": "Database Unique ID"
        },
        "name": {
          "type": "string",
          "example": "admin",
          "description": "Role Title"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "example": "2016-10-15T13:39:14.886Z",
          "description": "Date-time of Created Role"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "example": "2016-10-15T13:52:45.582Z",
          "description": "Date-time of Updated Role"
        }
      },
      "required": [
        "_id",
        "name",
        "created_at",
        "updated_at"
      ]
    }
  }
}
